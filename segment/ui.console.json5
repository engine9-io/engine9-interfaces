{
  menu: {
    people:{
      children: {
        segments:{
          title: 'Segments',
          icon: 'segment',
          url: '/segments',
        },
      },
    },
  },
  routes: {
    '/segments':{
      layout: 'full_width',
      components: {
        main: [
          {
            component: 'RecordList',
            properties: {
              table: 'segment',
              columns: [
                {
                  title: 'Id',
                  dataIndex: 'id',
                  sorter: true,
                  width: '20%',
                },
                {
                  title: 'Name',
                  dataIndex: 'name',
                  sorter: true,
                  render: '{{label}}',
                  width: '40%',
                },
              ],
              onRow: {
                onClick: {
                  action: 'navigate',
                  url: '/segments/{{record.id}}',
                },
              },
            },
          },
        ],
      },
    },
    '/segments/:id/*':{
      layout: 'full_width',
      components: {
        main: [
          {
            // 'path':'overview', //no path is the default
            component: 'RecordList',
            properties: {
              table: 'segment',
              components: [
                '{{label}}}',
              ],
            },
          }
        ],
      },
    },
     '/person/:id/*':{
      components: {
        sidebar: {items2:[
          {
            component: 'Link',
            properties: {
              label: 'Segments',
              to: 'segments',
            },
          },
        ]
        },
        main: [
          {
            path: 'segments',
            label: 'Segments',
            component: 'RecordList',
            properties: {
              table: 'person_segment',
                extensions: [
                  { alias: 'segments', table: 'segment' },
                ],
              conditions: [{ eql: 'person_id={{parameters.person_id}}' }],
              rows: [
                '{{segment}}',
              ],
            },
          },
        ],
      },
    },
  },
}
